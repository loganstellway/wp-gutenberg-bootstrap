{
    "name": "loganstellway/bootstrap-column",
    "category": "common",
    "attributes": {
        "bgUrl": {
            "type": "string"
        },
        "bgType": {
            "type": "string"
        },
        "bgId": {
            "type": "number"
        },
        "bgAttachment": {
            "type": "string",
            "default": "scroll"
        },
        "bgPosition": {
            "type": "string",
            "default": "50% 50%"
        },
        "addBgColor": {
            "type": "boolean",
            "default": false
        },
        "bgColor": {
            "type": "object",
            "default": {
                "hex": "transparent"
            }
        },
        "addMaskColor": {
            "type": "boolean",
            "default": false
        },
        "maskColor": {
            "type": "object",
            "default": {
                "hex": "transparent"
            }
        },
        "addTextColor": {
            "type": "boolean",
            "default": false
        },
        "textColor": {
            "type": "object",
            "default": {
                "hex": "inherit"
            }
        },
        "xs": {
            "type": "number",
            "default": 6
        },
        "sm": {
            "type": "number",
            "default": 6
        },
        "md": {
            "type": "number",
            "default": 6
        },
        "lg": {
            "type": "number",
            "default": 6
        },
        "xl": {
            "type": "number",
            "default": 6
        }
    }
}